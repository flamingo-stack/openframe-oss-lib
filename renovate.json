{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],

  "enabledManagers": ["regex"],

  "automerge": true,
  "automergeType": "pr",

  "regexManagers": [
    {
      "fileMatch": ["^pom\\.xml$"],
      "matchStrings": [
        "<revision>(?<currentValue>.*?)</revision>"
      ],
      "depNameTemplate": "com.openframe.oss:openframe-oss-lib",
      "datasourceTemplate": "maven",
      "registryUrls": ["https://maven.pkg.github.com/flamingo-stack/openframe-oss-lib"]
    }
  ],

  "packageRules": [
    {
      "description": "Automerge revision updates for openframe-oss-lib",
      "matchManagers": ["regex"],
      "matchPackageNames": ["com.openframe.oss:openframe-oss-lib"],
      "automerge": true,
      "automergeType": "pr"
    }
  ],

  "hostRules": [
    {
      "hostType": "maven",
      "matchHost": "maven.pkg.github.com"
    }
  ]
}
