{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "automergeType": "pr",
  "platformAutomerge": true,
  "enabledManagers": ["regex"],
  "baseBranches": ["main"],

  "regexManagers": [
    {
      "fileMatch": ["^pom\\.xml$"],
      "matchStrings": ["<revision>(?<currentValue>.*?)</revision>"],
      "depNameTemplate": "com.openframe.oss:openframe-oss-lib",
      "datasourceTemplate": "maven"
    },
    {
      "fileMatch": ["^openframe-frontend-core/package\\.json$"],
      "matchStrings": ["\"version\":\\s*\"(?<currentValue>.*?)\""],
      "depNameTemplate": "@flamingo-stack/openframe-frontend-core",
      "datasourceTemplate": "npm"
    }
  ],

  "packageRules": [
    {
      "packagePatterns": ["*"],
      "enabled": false
    },
    {
      "description": "Enable automerge for openframe-oss-lib revision updates",
      "matchManagers": ["regex"],
      "matchPackageNames": ["com.openframe.oss:openframe-oss-lib"],
      "enabled": true,
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true,
      "registryUrls": ["https://maven.pkg.github.com/flamingo-stack/openframe-oss-lib"],
      "schedule": ["at any time"],
      "prCreation": "immediate",
      "ignoreUnstable": true
    },
    {
      "description": "Enable automerge for openframe-frontend-core version updates",
      "matchManagers": ["regex"],
      "matchPackageNames": ["@flamingo-stack/openframe-frontend-core"],
      "enabled": true,
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true,
      "registryUrls": ["https://npm.pkg.github.com"],
      "schedule": ["at any time"],
      "prCreation": "immediate",
      "ignoreUnstable": true
    }
  ],

  "hostRules": [
    {
      "hostType": "maven",
      "matchHost": "maven.pkg.github.com"
    },
    {
      "hostType": "npm",
      "matchHost": "npm.pkg.github.com"
    }
  ]
}
