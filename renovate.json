{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "description": "Ignore all internal com.openframe.oss packages (this repo publishes them)",
      "matchPackagePatterns": ["^com\\.openframe\\.oss:"],
      "enabled": false
    },
    {
      "description": "Only enable Maven and GitHub Actions managers",
      "matchManagers": ["maven", "github-actions"],
      "enabled": true
    },
    {
      "description": "Disable all other managers",
      "excludeManagers": ["maven", "github-actions"],
      "enabled": false
    }
  ]
}
