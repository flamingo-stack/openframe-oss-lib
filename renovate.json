{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "automergeType": "pr",
  "platformAutomerge": true,
  "enabledManagers": ["regex"],
  "baseBranches": ["main"],

  "regexManagers": [
    {
      "fileMatch": ["^pom\\.xml$"],
      "matchStrings": ["<revision>(?<currentValue>.*?)</revision>"],
      "depNameTemplate": "com.openframe.oss:openframe-oss-lib",
      "datasourceTemplate": "maven"
    },
    {
      "fileMatch": ["^ui-kit/package\\.json$"],
      "matchStrings": ["\"version\":\\s*\"(?<currentValue>.*?)\""],
      "depNameTemplate": "@flamingo-stack/ui-kit",
      "datasourceTemplate": "npm"
    }
  ],

  "packageRules": [
    {
      "packagePatterns": ["*"],
      "enabled": false
    },
    {
      "description": "Enable automerge for openframe-oss-lib revision updates",
      "matchManagers": ["regex"],
      "matchPackageNames": ["com.openframe.oss:openframe-oss-lib"],
      "enabled": true,
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true,
      "registryUrls": ["https://maven.pkg.github.com/flamingo-stack/openframe-oss-lib"]
    },
    {
      "description": "Enable automerge for ui-kit version updates",
      "matchManagers": ["regex"],
      "matchPackageNames": ["@flamingo-stack/ui-kit"],
      "enabled": true,
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true,
      "registryUrls": ["https://npm.pkg.github.com"]
    }
  ],

  "hostRules": [
    {
      "hostType": "maven",
      "matchHost": "maven.pkg.github.com"
    },
    {
      "hostType": "npm",
      "matchHost": "npm.pkg.github.com"
    }
  ]
}
