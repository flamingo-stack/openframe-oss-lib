{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "enabledManagers": ["regex"],

  "regexManagers": [
    {
      "fileMatch": ["^pom\\.xml$"],
      "matchStrings": ["<revision>(?<currentValue>.*?)</revision>"],
      "depNameTemplate": "com.openframe.oss:openframe-oss-lib",
      "datasourceTemplate": "maven",
      "registryUrls": ["https://maven.pkg.github.com/flamingo-stack/openframe-oss-lib"],
      "prCreation": "immediate"
    }
  ],

  "packageRules": [
    {
      "matchManagers": ["custom.regex"],
      "matchPackageNames": ["com.openframe.oss:openframe-oss-lib"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "merge-commit",
      "requiredStatusChecks": null
    }
  ],

  "hostRules": [
    {
      "hostType": "maven",
      "matchHost": "maven.pkg.github.com"
    }
  ],

  "platformAutomerge": true
}
