{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "automerge": true,
  "automergeType": "pr",
  "github-actions": { "enabled": false },

  "regexManagers": [
    {
      "fileMatch": ["^pom\\.xml$"],
      "matchStrings": ["<revision>(?<currentValue>.*?)</revision>"],
      "depNameTemplate": "com.openframe.oss:openframe-oss-lib",
      "datasourceTemplate": "maven"
    }
  ],

  "packageRules": [
    {
      "packagePatterns": ["*"],
      "enabled": false
    },
    {
      "description": "Enable automerge for openframe-oss-lib revision updates",
      "matchManagers": ["regex"],
      "matchPackageNames": ["com.openframe.oss:openframe-oss-lib"],
      "enabled": true,
      "automerge": true,
      "automergeType": "pr"
    }
  ]
}
