{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "hostRules": [
    {
      "hostType": "maven",
      "matchHost": "maven.pkg.github.com"
    }
  ],
  "packageRules": [
    {
      "description": "Ignore all internal com.openframe.oss packages except openframe-oss-lib (this repo publishes them)",
      "matchPackagePatterns": [
        "^com\\.openframe\\.oss:(?!openframe-oss-lib$)"
      ],
      "enabled": false
    },
    {
      "description": "Enable updates for openframe-oss-lib parent version",
      "matchPackageNames": ["com.openframe.oss:openframe-oss-lib"],
      "enabled": true
    },
    {
      "description": "Only enable Maven and GitHub Actions managers",
      "matchManagers": ["maven", "github-actions", "regex"],
      "enabled": true
    },
    {
      "description": "Disable all other managers",
      "excludeManagers": ["maven", "github-actions", "regex"],
      "enabled": false
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^pom\\.xml$"],
      "matchStrings": [
        "<revision>(?<currentValue>.*?)</revision>"
      ],
      "depNameTemplate": "com.openframe.oss:openframe-oss-lib",
      "datasourceTemplate": "maven",
      "registryUrlsTemplate": "https://maven.pkg.github.com/flamingo-stack/openframe-oss-lib"
    }
  ]
}
