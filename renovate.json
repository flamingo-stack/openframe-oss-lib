{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "description": "Ignore all internal com.openframe.oss packages except openframe-oss-lib (this repo publishes them)",
      "matchPackagePatterns": [
        "^com\\.openframe\\.oss:(?!openframe-oss-lib$)"
      ],
      "enabled": false
    },
    {
      "description": "Enable updates for openframe-oss-lib parent version",
      "matchPackageNames": ["com.openframe.oss:openframe-oss-lib"],
      "enabled": true
    },
    {
      "description": "Only enable Maven and GitHub Actions managers",
      "matchManagers": ["maven", "github-actions"],
      "enabled": true
    },
    {
      "description": "Disable all other managers",
      "excludeManagers": ["maven", "github-actions"],
      "enabled": false
    }
  ]
}
