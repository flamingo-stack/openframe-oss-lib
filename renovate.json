{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": [
    "config:recommended",
    ":automergeAll",
    "local:disableAllManagersExceptRegex"
  ],

  "customPresets": {
    "disableAllManagersExceptRegex": {
      "description": "Disables all managers except regex",
      "enabledManagers": ["regex"],
      "maven": { "enabled": false },
      "gradle": { "enabled": false },
      "github-actions": { "enabled": false },
      "dockerfile": { "enabled": false },
      "npm": { "enabled": false }
    }
  },

  "regexManagers": [
    {
      "fileMatch": ["^pom\\.xml$"],
      "matchStrings": ["<revision>(?<currentValue>.*?)</revision>"],
      "depNameTemplate": "com.openframe.oss:openframe-oss-lib",
      "datasourceTemplate": "maven",
      "registryUrls": ["https://maven.pkg.github.com/flamingo-stack/openframe-oss-lib"],
      "prCreation": "immediate"
    }
  ],

  "packageRules": [
    {
      "matchManagers": ["regex"],
      "matchPackageNames": ["com.openframe.oss:openframe-oss-lib"],
      "automerge": true,
      "automergeType": "pr"
    }
  ]
}
