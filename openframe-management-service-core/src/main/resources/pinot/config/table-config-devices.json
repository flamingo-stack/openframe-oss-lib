{
  "tableName": "${pinot.tables.devices.name}",
  "tableType": "REALTIME",
  "segmentsConfig": {
    "timeColumnName": "ingestionTime",
    "timeType": "MILLISECONDS",
    "replication": "${pinot.tables.devices.replication}",
    "segmentAssignmentStrategy": "BalanceNumSegmentAssignmentStrategy",
    "retentionTimeUnit": "DAYS",
    "retentionTimeValue": "3650"
  },
  "tableIndexConfig": {
    "loadMode": "MMAP",
    "nullHandlingEnabled": true,
    "optimizeDictionary": true,
    "invertedIndexColumns": [
      "status",
      "deviceType",
      "osType",
      "organizationId",
      "tags"
    ],

    "streamConfigs": {
      "streamType": "kafka",
      "stream.kafka.topic.name": "${openframe.oss-tenant.kafka.topics.inbound.devices-topic.name}",
      "stream.kafka.broker.list": "${spring.oss-tenant.kafka.bootstrap-servers}",
      "stream.kafka.consumer.type": "lowlevel",
      "stream.kafka.decoder.class.name": "org.apache.pinot.plugin.stream.kafka.KafkaJSONMessageDecoder",
      "stream.kafka.consumer.prop.auto.offset.reset": "smallest",
      "realtime.segment.flush.threshold.time": "6h",
      "realtime.segment.flush.threshold.rows": "100000"
    }
  },
  "fieldConfigList": [
    {
      "name": "tags",
      "encodingType": "DICTIONARY",
      "properties": {
        "maxMultiValueEntries": 50
      }
    }
  ],
  "routing": {
    "instanceSelectorType": "strictReplicaGroup"
  },
  "upsertConfig": {
    "mode": "FULL",
    "comparisonColumn": "ingestionTime"
  },
  "tenants": {
    "broker": "DefaultTenant",
    "server": "DefaultTenant"
  },
  "task": {
    "taskTypeConfigsMap": {
      "UpsertCompactionTask": {
        "schedule": "0 0 3 * * ?",
        "bufferTimePeriod": "4h",
        "invalidRecordsThresholdPercent": "30"
      }
    }
  }
}